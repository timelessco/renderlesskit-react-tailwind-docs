{
  "name": "renderlesskit-react-tailwind-docs",
  "private": true,
  "workspaces": [
    "packages/website",
    "packages/nextra-theme-docs",
    "packages/codeblock"
  ],
  "scripts": {
    "postinstall": "concurrently \"husky install\" \"patch-package\"",
    "dev:theme": "yarn theme run dev",
    "dev:codeblock": "yarn codeblock run dev",
    "dev:site": "yarn website run dev",
    "start:site": "yarn website run start",
    "build:theme": "yarn theme run build",
    "build:codeblock": "yarn workspace codeblock run build",
    "build:site": "yarn website run build",
    "lint:site": "yarn website run lint",
    "lint": "eslint . --ext .tsx,.ts,.jsx,.js",
    "lint:fix": "eslint . --ext .tsx,.ts,.jsx,.js --fix",
    "format": "prettier --write \"./**/*.{js,ts,css,less,json,md,mdx,html,yml,yaml,pcss,jsx,tsx}\"",
    "format:package": "sort-package-json",
    "commit": "gacp",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "codeblock": "yarn workspace codeblock",
    "theme": "yarn workspace nextra-theme-docs",
    "website": "yarn workspace website"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,tx,tsx}": [
      "yarn lint:fix"
    ],
    "**/*.{js,ts,css,less,json,md,html,yml,yaml,pcss,jsx,tsx}": [
      "yarn format",
      "git add"
    ],
    "package.json": [
      "yarn format:package"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "all-contributors-cli": "^6.20.0",
    "autoprefixer": "^10.2.6",
    "babel-eslint": "^10.1.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.8.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "microbundle": "^0.13.3",
    "patch-package": "^6.4.7",
    "pinst": "^2.1.6",
    "postcss": "^8.3.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "2.2.4",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "eslint-config-next": "^11.0.1",
    "sort-package-json": "^1.50.0"
  },
  "gacp": {
    "add": false,
    "push": false,
    "emoji": "emoji",
    "editor": false
  }
}
